<h1>create new article</h1>

<% if @post.errors.any? %>
<h2> The following errors are prevented while saving new post</h2>
    <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li> <%= msg%></li>
        <% end %>
    </ul>

<% end%>


<%= form_with scope: :post, url: posts_path, local: true do |f| %>

    <p>
        <%= f.label :title%>
        <%= f.text_field :title%>
    </p>

    <p>
        <%= f.label :description%>
        <%= f.text_area :description%>
    </p>

    <p>
        <%= f.submit%>
    </p>
<% end %>

